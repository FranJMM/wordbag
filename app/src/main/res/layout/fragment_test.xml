<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment"
    style="@style/Fragment">
    <LinearLayout
        android:id="@+id/testLayout"
		style="@style/TestLayout">
		<LinearLayout
		    	android:id="@+id/questionContainer"
		        style="@style/TestQuestionContainer">
		        <LinearLayout
		            android:id="@+id/questionCard"
		        	style="@style/TestQuestionCard">
		            <TextView
		        	android:id="@+id/question"
		        	style="@style/TestQuestion"/>
					<TextView
		        	android:id="@+id/questionRightAnswers"
		        	style="@style/TestQuestionRightAnswers" />
		        </LinearLayout>
		</LinearLayout>
		<View 
	    	android:id="@+id/testDivider"
		    style="@style/TestDivider"/>
		<!-- TestAnswerBackground is a workaround for displaying properly edit text's bkg. -->
	   	<RelativeLayout
	   	    android:id="@+id/testAnswerContainer"
 			style="@style/TestAnswerContainer">
		    <View 
		    	android:id="@+id/testAnswerBackground"
 				style="@style/TestAnswerBackground"/>
		    <EditText
		        android:id="@+id/answer"
		        style="@style/TestAnswer">
	    	</EditText>
	    </RelativeLayout>
	    <LinearLayout
 			style="@style/TestButtonContainer">
		    <Button
		        android:id="@+id/check"
		        android:text="@string/check"
		        style="@style/TestCheckButton"/>
	    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/testNoDictionariesMessage"
        style="@style/Message"
        android:text="@string/message_no_dictionaries_test" />
    <TextView
        android:id="@+id/testNoWordsMessage"
        style="@style/Message"
        android:text="@string/message_no_words" />
</LinearLayout>